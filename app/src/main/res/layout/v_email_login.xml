<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>

        <import type="android.view.View" />

        <variable
            name="visible"
            type="java.lang.Boolean" />

        <variable
            name="presenter"
            type="io.github.dmitrikudrenko.kebab.ui.auth.presenter.AuthPresenter" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="@{visible ? View.VISIBLE : View.GONE}">

        <EditText
            android:id="@+id/login"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/login"
            android:inputType="textEmailAddress"
            android:text="darkdelphin@inbox.ru" />

        <EditText
            android:id="@+id/password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/password"
            android:inputType="textPassword"
            android:text="1qaz!QAZ" />

        <Button
            android:id="@+id/sign_in_with_mail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="@{() -> presenter.onSignInViaMail(login.getText(), password.getText())}"
            android:text="@string/sign_in_with_email" />
    </LinearLayout>
</layout>